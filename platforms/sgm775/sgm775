TARGET_sgm775[uefi]="css-common"
TARGET_sgm775[linux]="Image uImage.0x80080000"
TARGET_sgm775[ramdisk]=0x88000000
TARGET_sgm775[tbbr]=1
TARGET_sgm775[optee]=1
TARGET_sgm775[scp]="sgm775"

